{
  "compilerOptions": {
    "target": "es5",                                
    "outDir": "./dist",                              
    "rootDir": "./",                             
    "baseUrl": "./src",                             
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@erros/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@root/*": ["../*"],
      "@src/*": ["./*"]

    },                                 
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "resolveJsonModule": true
  }
}
